{
  "name": "vk-silence",
  "version": "2.0.0",
  "scripts": {
    "build": "rimraf builds && node make"
  },
  "devDependencies": {
    "rimraf": "^2.5.4",
    "mkdirp": "^0.5.1",
    "syncy": "^2.0.1",
    "typescript": "^1.8.10",
    "pify": "^2.3.0",
    "tslint": "^3.15.1",
    "xo": "^0.16.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "space-before-function-paren": [2, "never"],
      "babel/arrow-parens": [2, "always"],
      "babel/object-curly-spacing": [2, "always"],
      "babel/generator-star-spacing": [2, "after"]
    },
    "envs": [
      "browser",
      "node",
      "mocha"
    ]
  }
}
